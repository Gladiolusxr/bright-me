<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailShopFragment">

    <View
        android:id="@+id/view_bg"
        android:layout_width="411dp"
        android:layout_height="486dp"
        android:background="@drawable/bg_detail_shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img_product"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_img_product"
        android:layout_width="409dp"
        android:layout_height="242dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Natural Daily Aloe Hydramild Gel"
        android:textColor="#24243F"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_bg" />

    <TextView
        android:id="@+id/tv_mini_desc"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:textColor="#24243F"
        android:text="Nourishing beard, energizin and brightening face, hair and body wash, Leaflet"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_product"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_product" />

    <View
        android:id="@+id/line_2"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="#bfbfbf"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_first_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_first_price"
        app:layout_constraintStart_toStartOf="@+id/tv_first_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 59.850"
        android:textColor="#774396"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toEndOf="@+id/tv_mini_desc"
        app:layout_constraintTop_toTopOf="@+id/tv_mini_desc" />

    <TextView
        android:id="@+id/tv_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mini_desc" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="347dp"
        android:layout_height="271dp"
        android:textColor="#24243F"
        android:text="A multi-functional gel containing natural Aloe vera that provides extra moisture with a soothing effect and cools dry and reddened skin from the sun. Its unique, light, and non-sticky formula works as an anti-irritant, anti-inflammatory, as a soothing agent for sunburned skin, and helps increase skin resistance (skin barrier).  80% ALCOHOL
ANTIBACTERIAL FORMULA, HYDRAMILD ALOE VERA EXTRACT, GLYCERIN. Aqua, Propylene Glycol, Beta-Glucan, Glycerin, Aloe Barbadensis (Aloe Vera) Leaf Extract, Butylene Glycol, Biosaccharide Gum-1, Phenoxyethanol, PEG-40 Hydrogenated Castor Oil, Acrylates/C10-30 Alkyl Acrylate Crosspolymer, Triethanolamine, Trideceth- 9, 1,2-Hexanediol, Caprylyl Glycol, Glyceryl Polyacrylate, Allantoin, Disodium EDTA, Ethylhexylglycerin, Fragrance, Polysorbate 20, Potassium Sorbate, Sodium Benzoate."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_button_white"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@color/purple_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buyButton"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/tv_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buyButton"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button_purple"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@+id/view_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="@+id/iv_img_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/tv_first_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 74.000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mini_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toEndOf="@+id/tv_mini_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>