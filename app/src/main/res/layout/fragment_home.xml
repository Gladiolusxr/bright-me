<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.navigation.home.HomeFragment">
    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_photo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_default_account_profile"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="@string/name"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_notification"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/iv_notification"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/iv_cart"/>
    </LinearLayout>
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/header_home"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_view"
            app:queryHint="@string/search_hint_home"
            app:iconifiedByDefault="false"
            android:theme="@style/SearchViewStyle"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/iv_filter"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_information_for_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tv_information_for_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subheader_home_1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="@string/view_more"
                    android:textSize="12sp"
                    android:textColor="@color/gray_subheader"/>
            </LinearLayout>

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/information_motion"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginHorizontal="25dp"
                app:layoutDescription="@xml/fragment_home_xml_information_motion_scene"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_information_for_you">
                <ImageView
                    android:id="@+id/iv_information_1"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:layout_marginVertical="8dp"
                    android:src="@drawable/iv_information_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/iv_information_2"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:layout_marginVertical="8dp"
                    android:src="@drawable/iv_information_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/menu1"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="2dp"
                    android:scaleType="centerCrop"
                    app:altSrc="@drawable/menu_on_home"
                    app:layout_constraintBottom_toBottomOf="@id/parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:srcCompat="@drawable/menu_off"/>
                <!--  Guideline di tengah  -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/menu2"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="2dp"
                    android:scaleType="centerCrop"
                    app:altSrc="@drawable/menu_on_home"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintBottom_toBottomOf="@id/menu1"
                    app:srcCompat="@drawable/menu_off"/>
            </androidx.constraintlayout.motion.widget.MotionLayout>

            <LinearLayout
                android:id="@+id/ll_what_do_you_feel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/information_motion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tv_what_do_you_feel_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subheader_home_2"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_view_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="@string/view_more"
                    android:textSize="12sp"
                    android:textColor="@color/gray_subheader"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/sv_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/ll_what_do_you_feel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:id="@+id/ll_button_skin_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_acne"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bg_button_gray"
                        android:text="@string/acne_type_skin"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_acne_skin_homepage"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_black_spots"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bg_button_gray"
                        android:text="@string/black_spots"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_black_spot_homepage"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_oily"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/bg_button_gray"
                        android:text="@string/oily_type_skin"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_oily_skin_homepage"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_wrinkle"
                        android:layout_width="122dp"
                        android:layout_height="35dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_button_gray"
                        android:text="@string/wrinkle_skin"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic_wrinkle_skin_homepage"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/ll_popular_skincare_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/sv_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tv_popular_skincare_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subheader_home_3"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_view_more_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="@string/view_more"
                    android:textSize="12sp"
                    android:textColor="@color/gray_subheader"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_popular_skincare_products"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:id="@+id/product_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_ll_product"
                    android:elevation="4dp">
                    <ImageView
                        android:id="@+id/iv_product_1"
                        android:layout_width="match_parent"
                        android:layout_height="126dp"
                        android:background="@drawable/bg_product"
                        tools:src="@drawable/iv_sample_product"/>
                    <TextView
                        android:id="@+id/tv_title_product_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/navy_text"
                        android:maxLines="2"
                        tools:text="@string/title_product"/>
                    <TextView
                        android:id="@+id/tv_merk_product_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:textSize="10sp"
                        android:textColor="@color/gray_subheader_2"
                        tools:text="@string/merk_product"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_price_product_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_main"
                            tools:text="@string/price_product"/>
                        <ImageView
                            android:id="@+id/toggle_button_like_product_1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/custom_like_product_button"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/product_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_ll_product"
                    android:elevation="4dp">
                    <ImageView
                        android:id="@+id/iv_product_2"
                        android:layout_width="match_parent"
                        android:layout_height="126dp"
                        android:background="@drawable/bg_product"
                        tools:src="@drawable/iv_sample_product"/>
                    <TextView
                        android:id="@+id/tv_title_product_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/navy_text"
                        android:maxLines="2"
                        tools:text="@string/title_product"/>
                    <TextView
                        android:id="@+id/tv_merk_product_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:textSize="10sp"
                        android:textColor="@color/gray_subheader_2"
                        tools:text="@string/merk_product"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_price_product_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_main"
                            tools:text="@string/price_product"/>
                        <ImageView
                            android:id="@+id/toggle_button_like_product_2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/custom_like_product_button"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_about_local_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:text="@string/about_local_products"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ll_products"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/ll_about_local_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="84dp"
                android:layout_marginHorizontal="25dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_ll_product"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_about_local_product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tv_view_more_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/view_more"
                    android:textSize="12sp"
                    android:textColor="@color/purple_main"/>
                <LinearLayout
                    android:id="@+id/news_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_news_1"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rounded_image_view"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iv_news_1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/navy_text"
                            android:textSize="12sp"
                            android:text="@string/news_title_1"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_subheader_2"
                            android:textSize="10sp"
                            android:text="@string/news_date_1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/news_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_news_2"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/rounded_image_view"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iv_news_2"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/navy_text"
                            android:textSize="12sp"
                            android:text="@string/news_title_2"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_subheader_2"
                            android:textSize="10sp"
                            android:text="@string/news_date_2"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>